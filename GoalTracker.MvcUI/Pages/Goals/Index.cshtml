@page
@model GoalTracker.MvcUI.Pages.Goals.IndexModel

@{
  ViewData["Title"] = "Index";
}

<div class="page-header">
  <h2>Walking Goals</h2>
</div>


<p>
  <a asp-page="Create">Create New</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.WalkGoals.FirstOrDefault().Name)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.WalkGoals.FirstOrDefault().StartDate)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.WalkGoals.FirstOrDefault().EndDate)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.WalkGoals.FirstOrDefault().TargetDistance)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.WalkGoals.FirstOrDefault().Description)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model.WalkGoals)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.TargetDistance)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
          <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
          <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
          <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>
